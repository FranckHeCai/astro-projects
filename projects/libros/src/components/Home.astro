---
import { getCollection } from "astro:content";

const books = await getCollection("books")


---

<html>
    <head>
        <title>Homepage</title>
    </head>
    <body>
        <main class="flex flex-col gap-10">
            <h1 class="text-5xl font-bold text-center">Manga Covers</h1>
            <section aria-label="manga covers" >
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
                    {
                        books.map(book =>{
                            const {slug, data} = book
                            const {title, author, img, description, release_date} = data 
                            return(
                                <article class="flex flex-col items-center gap-5 p-5 hover:bg-neutral-600 rounded-lg transition">
                                    <a href={`/book/${slug}`}>
                                        <img  
                                            transition:name={`img-${slug}`}
                                            class="rounded" 
                                            src={`/img/${img}`} 
                                            alt={title} 
                                        />
                                    </a>
                                    <h3 class="text-lg font-medium">{title}</h3>
                                    
                                </article>
                            )
                        })
                    }
                </div>
            </section>
        </main>
        
    </body>
</html></body></head>